.container.card.mt-2.col-8.mb-3.border.border-success.border-3
  %h2.display-6.ms-3 Link Your Socials (optional)
  %hr.m-1/
  .me-3.ms-3
    =form_for(@user, url: wizard_path, method: :put) do |f|
      -if f.object.errors.any?
        .error_messages
          -f.object.errors.full_messages.each do |error|
            %p{:style => "color: red"}= error
      .form-control.mt-3.mb-3
        %legend Step 3/3
        .row.mb-3
          .col-4
            = f.label :github, "GitHub",class: "form-label"
            =f.text_field :github, class: "form-control", placeholder: "...."
          .col-4
            =f.label :linkedin, "LinkedIn",class: "form-label"
            =f.text_field :linkedin, class: "form-control", placeholder: "...."
          .col-4
            =f.label :website, "Website",class: "form-label"
            =f.text_field :website, class: "form-control", placeholder: "...."
        .row.mb-3
          .col-3
            = f.label :youtube, "Youtube",class: "form-label"
            =f.text_field :youtube, class: "form-control", placeholder: "...."
          .col-3
            = f.label :twitter, "X (Twitter)",class: "form-label"
            =f.text_field :twitter, class: "form-control", placeholder: "...."
          .col-3
            = f.label :instagram, "Instagram",class: "form-label"
            =f.text_field :instagram, class: "form-control", placeholder: "...."
          .col-3
            = f.label :discord, "Discord Username",class: "form-label"
            =f.text_field :discord, class: "form-control", placeholder: "...."
        .d-flex.flex-row-reverse.mb-3
          =f.submit 'Next Step', class: "btn btn-primary ms-3"
          =render 'links'

:css
  div.field_with_errors {
    display: inline;
  }