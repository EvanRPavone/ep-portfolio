.container
  %h2
    Edit #{resource_name.to_s.humanize}
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}
    .field
      = f.label :phone_number
      %br/
      = f.text_field :phone_number, class: 'form-control', autofocus: true, placeholder: 'xxx-xxx-xxxx', value: number_to_phone(@user.phone_number, area_code: true)
    .field
      =f.label :avatar
      %br/
      =f.file_field :avatar
    .field
      =f.label :first_name, "First Name"
      %br/
      = f.text_field :first_name
    .field
      =f.label :last_name, "Last Name"
      %br/
      = f.text_field :last_name
    =fields_for :location, resource.location do |c|
      =c.hidden_field :id
      .container.card
        %legend Where are you located?
        .field
          =c.label :state
          =c.text_field :state
        .field
          =c.label :country
          =c.text_field :country
    .form-control
      %legend Your Socials
      .input-group.mt-2
        =f.text_field :github, class: "form-control", placeholder: "GitHub...."
        =f.text_field :linkedin, class: "form-control", placeholder: "LinkedIn...."
        =f.text_field :website, class: "form-control", placeholder: "Website...."
      .input-group.mt-2
        =f.text_field :youtube, class: "form-control", placeholder: "Youtube...."
        =f.text_field :twitter, class: "form-control", placeholder: "Twitter (X)...."
        =f.text_field :instagram, class: "form-control", placeholder: "Website...."
        =f.text_field :discord, class: "form-control", placeholder: "Discord Username...."
    .field
      = f.label :password
      %i (leave blank if you don't want to change it)
      %br/
      = f.password_field :password, autocomplete: "new-password"
      - if @minimum_password_length
        %br/
        %em
          = @minimum_password_length
          characters minimum
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .field
      = f.label :current_password
      %i (we need your current password to confirm your changes)
      %br/
      = f.password_field :current_password, autocomplete: "current-password"
    .actions
      = f.submit "Update"
  %h3 Cancel my account
  %div
    Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete}
  = link_to "Back", :back
