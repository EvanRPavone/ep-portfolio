.container
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email"
    .row.mb-3
      .col-6
        =f.label :first_name, "First Name",class: "form-label"
        =f.text_field :first_name, class: "form-control", placeholder: "First name....", required: true
      .col-6
        =f.label :last_name, "Last Name",class: "form-label"
        =f.text_field :last_name, class: "ms-2 form-control", placeholder: "Last name....", required: true
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password"
    .actions
      = f.submit "Sign up"
  = render "devise/shared/links"
